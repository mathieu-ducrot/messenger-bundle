<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="messenger.sender" class="MessengerBundle\Sender\DefaultSender">
            <argument type="service" id="messenger.content_builder"/>
            <argument>%kernel.debug%</argument>
            <argument type="service" id="logger"/>

            <tag name="logger" channel="%messenger.logging_channel%"/>
        </service>

        <service id="messenger.content_builder" class="MessengerBundle\Helper\ContentBuilder" public="false">
            <argument type="service" id="templating"/>
            <argument type="service" id="translator"/>
            <argument>%messenger.content_builder_defaults%</argument>
        </service>

    </services>

</container>
